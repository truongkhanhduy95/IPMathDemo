<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.truongkhanhduy.ipmathdemo.IPInfoActivity"
    android:weightSum="1"
    android:background="@color/backGround">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/conTent"
        android:layout_marginBottom="20px">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:background="@color/inPut">

            <TextView
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Input"
                android:id="@+id/textView18"
                android:textColor="#ffffff"
                android:layout_marginLeft="15px"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_margin="20px" />

            <ImageView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:id="@+id/btnReset"
                android:src="@drawable/reset"
                android:scaleType="center" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView19"
            android:height="3dp"
            android:background="#185640" />

        <EditText
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtIPInput"
            android:background="@drawable/bg_edittext"
            android:textColor="#17f24e"
            android:layout_margin="20px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="70px"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Div IP"
            android:id="@+id/btnDiv"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:background="@color/buton"
            android:layout_marginBottom="20px" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/conTent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:background="@color/reSult">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Result"
                android:id="@+id/textView20"
                android:textColor="#ffffff"
                android:layout_marginLeft="15px"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_margin="20px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView23"
                android:background="#7c1818"
                android:height="6px" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/conTent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="SOURCE IP"
                android:id="@+id/textView2"
                android:background="@color/conTent"
                android:textColor="#4181cf"
                android:layout_marginLeft="30px"
                android:layout_marginTop="20px"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Binary"
                    android:id="@+id/textView"
                    android:layout_marginLeft="50px"
                    android:textSize="30px"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/txtIPBinary"
                    android:textColor="#e71818"
                    android:textSize="40px" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="NETWORK IP"
                android:id="@+id/textView3"
                android:background="@color/conTent"
                android:textColor="#4181cf"
                android:layout_marginLeft="30px"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="88dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Decimal"
                        android:id="@+id/textView4"
                        android:layout_marginLeft="50px"
                        android:textSize="30px"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/txtNetworkDecimal"
                        android:textColor="#3a66ec"
                        android:textSize="50px" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Binary"
                        android:id="@+id/textView5"
                        android:layout_marginLeft="50px"
                        android:textSize="30px"
                        android:gravity="center_vertical"
                        android:textColor="#ffffff" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/txtNetworkBinary"
                        android:textColor="#e71818"
                        android:textSize="40px" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="BROADCAST IP"
                android:id="@+id/textView8"
                android:background="@color/conTent"
                android:textColor="#4181cf"
                android:layout_marginLeft="30px"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="88dp" >

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Decimal"
                            android:id="@+id/textView6"
                            android:layout_marginLeft="50px"
                            android:textSize="30px"
                            android:textColor="#ffffff" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/txtBroadcastDecimal"
                            android:textColor="#3a66ec"
                            android:textSize="50px" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Binary"
                            android:id="@+id/textView7"
                            android:textSize="30px"
                            android:layout_marginLeft="50px"
                            android:textColor="#ffffff"
                            android:gravity="center_vertical|left" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/txtBroadcastBinary"
                            android:textColor="#e71818"
                            android:textSize="40px" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="USABLE HOST"
                android:id="@+id/textView9"
                android:background="@color/conTent"
                android:textColor="#4181cf"
                android:layout_marginLeft="30px"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Hosts"
                    android:id="@+id/textView10"
                    android:layout_marginLeft="50px"
                    android:textSize="30px"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/txtUsableHosts"
                    android:textColor="#3a66ec"
                    android:textSize="60px" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
