<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.truongkhanhduy.ipmathdemo.ConvertIPv6Activity"
    android:background="@color/backGround"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/conTent"
        android:layout_marginBottom="50px" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:background="@color/inPut" >

            <TextView
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Input"
                android:id="@+id/textView24"
                android:textColor="#ffffff"
                android:layout_marginLeft="15px"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_margin="20px" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnReset"
                android:src="@drawable/reset"
                android:scaleType="center" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView25"
            android:height="3dp"
            android:background="#185640" />

        <EditText
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtInput"
            android:background="@drawable/bg_edittext"
            android:textColor="#17f24e"
            android:layout_marginLeft="50px"
            android:layout_marginRight="70px"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:id="@+id/btnConvert"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:background="#343734"
            android:layout_marginBottom="30px"
            android:layout_marginTop="30px" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/reSult">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Result"
            android:id="@+id/textView26"
            android:textColor="#ffffff"
            android:layout_marginLeft="15px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_margin="20px" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView27"
        android:background="#7d1515"
        android:height="3dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/conTent"
        android:weightSum="1"
        android:gravity="center"
        android:layout_marginBottom="50px">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="50px">

            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="IPv4"
                android:id="@+id/textView36"
                android:textColor="#2fc46e" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txtIPv4"
                android:textColor="#1d74da" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginLeft="50px"
            android:layout_marginRight="20px">

            <TextView
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="IPv6"
                android:id="@+id/textView37"
                android:textColor="#de4b3c" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/txtIPv6"
                android:textColor="#de4b3c" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
