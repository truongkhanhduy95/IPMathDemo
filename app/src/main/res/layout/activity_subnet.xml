<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.truongkhanhduy.ipmathdemo.SubnetActivity"
    android:background="@color/backGround">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/conTent"
        android:layout_marginBottom="50px">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/inPut"
            android:layout_gravity="right">

            <TextView
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Input"
                android:id="@+id/textView21"
                android:textColor="#ffffff"
                android:layout_marginLeft="15px"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_margin="20px" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnReset"
                android:src="@drawable/reset"
                android:scaleType="center" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView11"
            android:height="3dp"
            android:background="#185640"
            android:layout_gravity="right"
            android:layout_weight="0.12" />

        <EditText
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtIPInput"
            android:background="@drawable/bg_edittext"
            android:textColor="#17f24e"
            android:layout_margin="20px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="70px"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center_horizontal" />

        <EditText
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/txtNumberSubnet"
            android:background="@drawable/bg_edittext"
            android:textColor="#17f24e"
            android:layout_margin="20px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="70px"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center_horizontal"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subnet"
            android:id="@+id/btnDiv"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:background="#343734"
            android:layout_marginBottom="20px" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/conTent" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/subnet_theme">

            <TextView
                android:layout_width="277dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Note"
                android:id="@+id/textView38"
                android:textColor="#ffffff"
                android:layout_marginLeft="15px"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_margin="20px" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView39"
            android:height="3dp"
            android:background="#185640"
            android:layout_weight="0.12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Insert IP which you want to subneting in first textbox"
            android:id="@+id/textView40"
            android:layout_margin="30px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Insert the number of USABLE host each subnet which you want in second textbox "
            android:id="@+id/textView41"
            android:layout_margin="30px" />

    </LinearLayout>

</LinearLayout>
